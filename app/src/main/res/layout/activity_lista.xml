<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
            name="isLista"
            type="br.com.fiap.mba3scjo2021_grupoa_listou.models.ListaCompra" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:fillViewport="true"
        android:orientation="vertical"
        tools:context=".ListaActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dp"
                android:background="@drawable/shape_bg_login"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    card_view:cardCornerRadius="30dp"
                    android:layout_margin="10dp">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="?android:dividerHorizontal"
                        android:orientation="vertical"
                        android:showDividers="middle">

                        <TextView
                            android:id="@+id/id"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="0dp"
                            android:visibility="invisible" />

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_margin="10dp"
                                android:layout_marginStart="15dp"
                                android:text="@string/descricao_label" />

                            <TextView
                                android:id="@+id/descricao"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:layout_gravity="end"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="120dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="end"
                                android:paddingEnd="10dp"
                                android:text="@{isLista.descricao}"
                                android:textColor="@color/textoListas" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_margin="10dp"
                                android:layout_marginStart="15dp"
                                android:text="@string/data_compra_label" />

                            <TextView
                                android:id="@+id/dtCompra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="1"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="120dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="end"
                                android:paddingEnd="10dp"
                                android:text="@{isLista.dtCompra}"
                                android:textColor="@color/textoListas" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="2"
                                android:layout_column="0"
                                android:layout_margin="10dp"
                                android:layout_marginStart="15dp"
                                android:text="@string/is_recorrente_label" />

                            <TextView
                                android:id="@+id/recorrente"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_row="2"
                                android:layout_column="1"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="120dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="end"
                                android:paddingEnd="10dp"
                                android:text="@{isLista.recorrente}"
                                android:textColor="@color/textoListas" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="3"
                                android:layout_column="0"
                                android:layout_margin="10dp"
                                android:layout_marginStart="15dp"
                                android:text="@string/recorrencia_label" />

                            <TextView
                                android:id="@+id/recorrencia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_row="3"
                                android:layout_column="1"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="120dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="end"
                                android:paddingEnd="10dp"
                                android:text="@{isLista.recorrencia}"
                                android:textColor="@color/textoListas" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="4"
                                android:layout_column="0"
                                android:layout_margin="10dp"
                                android:layout_marginStart="15dp"
                                android:text="@string/orcamento" />

                            <TextView
                                android:id="@+id/orcamento"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_row="4"
                                android:layout_column="1"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="120dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="end"
                                android:paddingEnd="10dp"
                                android:text="@{isLista.orcamento}"
                                android:textColor="@color/textoListas" />
                        </GridLayout>

                        <TextView
                            android:id="@+id/detalhesButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:text="@string/detalhes_label"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                    </GridLayout>
                </androidx.cardview.widget.CardView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_item_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:listitem="@layout/item_compra" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>

